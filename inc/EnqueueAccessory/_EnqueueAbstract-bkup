<?php
/**
 * Abstract Enqueue implementation - DEPRECATED.
 *
 * This class provides functionality for enqueueing scripts, styles, and media in WordPress.
 * It now serves as a backward-compatibility layer.
 *
 * @package      RanPluginLib
 * @deprecated   0.2.0 This class is deprecated and will be removed in a future version.
 *               Use Ran\PluginLib\EnqueueAccessory\EnqueueAdmin,
 *               Ran\PluginLib\EnqueueAccessory\EnqueuePublic, or extend
 *               Ran\PluginLib\EnqueueAccessory\EnqueueAssetBaseAbstract and use the relevant traits directly.
 */

declare(strict_types = 1);

namespace Ran\PluginLib\EnqueueAccessory;

use Ran\PluginLib\Config\ConfigInterface;

/**
 * @deprecated 0.2.0 This class is deprecated. Extend EnqueueAssetBaseAbstract and use traits instead.
 */
abstract class EnqueueAbstract extends EnqueueAssetBaseAbstract implements EnqueueInterface {
	use ScriptsEnqueueTrait;
	use StylesEnqueueTrait;
	use MediaEnqueueTrait;

	/**
	 * Constructor.
	 *
	 * @param ConfigInterface $config The configuration object.
	 *
	 * @deprecated 0.2.0 This class is deprecated. Extend EnqueueAssetBaseAbstract and use traits instead.
	 */
	public function __construct( ConfigInterface $config ) {
		parent::__construct( $config );
		// @codingStandardsIgnoreStart
		$message = sprintf(
			/* translators: 1: Class name, 2: Replacement class/method */
			esc_html__( 'Class %1$s is deprecated. Please use EnqueueAdmin, EnqueuePublic, or extend EnqueueAssetBaseAbstract and use the relevant traits directly.', 'ran-plugin-lib' ),
			__CLASS__
		);
		\_doing_it_wrong( __METHOD__, esc_html( $message ), '0.2.0' );
		// @codingStandardsIgnoreEnd
	}

	/**
	 * Abstract method for hooking into WordPress to enqueue assets.
	 *
	 * Concrete implementations of this method should use WordPress action hooks
	 * (e.g., `admin_enqueue_scripts`, `wp_enqueue_scripts`, `login_enqueue_scripts`)
	 * to call a method (often `enqueue()` from this class, or a custom one)
	 * that will process and enqueue the registered scripts and styles.
	 *
	 * This method is typically called during the plugin's initialization sequence.
	 *
	 * @deprecated 0.2.0 This method is part of a deprecated class. Implement in child classes of EnqueueAssetBaseAbstract.
	 */
	abstract public function load(): void;

	// All other methods and properties are now inherited from EnqueueAssetBaseAbstract or provided by traits.
	// This class is now a thin compatibility layer.
}
